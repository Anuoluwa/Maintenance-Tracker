{
  "name": "server",
  "version": "1.0.0",
  "description": "api endpoints ",
  "main": "app.js",
  "scripts": {
    "start": "nodemon --watch app.js --exec babel-node -- app.js",
    "test": "nyc --reporter=html --reporter=text --require babel-register mocha \" tests/**/*.spec.js\" --reporter progress --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": " esw app.js models routes tests --color",
    "lint-watch": "npm run lint -- --watch"
  },
  "author": "anuoluwa apiti",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.11.0",
    "express": "^4.16.3",
    "mocha": "^5.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.8.0",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "eslint-watch": "^3.1.4",
    "nodemon": "^1.17.4"
  },
  "nyc": {
    "check coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "include":[
    "server"
  ]
}
